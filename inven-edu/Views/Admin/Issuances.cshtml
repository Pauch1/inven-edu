@model inven_edu.Models.ViewModels.IssuanceSearchViewModel
@{
    ViewData["Title"] = "Manage Issuances";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-hand-holding"></i> Issuance Management</h1>
        <div class="action-buttons">
            <a asp-action="CreateIssuance" class="btn btn-success">
                <i class="fas fa-plus"></i> New Issuance
            </a>
            <a asp-action="DownloadIssuanceReport" class="btn btn-info">
                <i class="fas fa-file-pdf"></i> Export PDF
            </a>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Issuances" method="get">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="SearchTerm" class="form-label"></label>
                            <input asp-for="SearchTerm" class="form-control" placeholder="Search..." />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-control">
                                <option value="">All Status</option>
                                <option value="Issued">Issued</option>
                                <option value="Returned">Returned</option>
                                <option value="Overdue">Overdue</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="FromDate" class="form-label"></label>
                            <input asp-for="FromDate" class="form-control" type="date" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="ToDate" class="form-label"></label>
                            <input asp-for="ToDate" class="form-control" type="date" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label">&nbsp;</label>
                            <div class="action-buttons">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Search
                                </button>
                                <a asp-action="Issuances" class="btn btn-secondary">
                                    <i class="fas fa-redo"></i> Clear
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Issuance Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Issuances.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>User</th>
                                <th>Quantity</th>
                                <th>Issued Date</th>
                                <th>Return Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var issuance in Model.Issuances)
                            {
                                <tr class="@(issuance.IsOverdue ? "table-warning" : "")">
                                    <td><strong>@issuance.ItemName</strong></td>
                                    <td>
                                        @issuance.UserName<br />
                                        <small class="text-muted">@issuance.UserEmail</small>
                                    </td>
                                    <td>@issuance.QuantityIssued</td>
                                    <td>@issuance.IssuedDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (issuance.ReturnDate.HasValue)
                                        {
                                            @issuance.ReturnDate.Value.ToString("MMM dd, yyyy")
                                            @if (issuance.IsOverdue && issuance.Status == "Issued")
                                            {
                                                <br /><span class="badge badge-danger">Overdue</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @if (issuance.Status == "Issued")
                                        {
                                            <span class="badge badge-info">@issuance.Status</span>
                                        }
                                        else if (issuance.Status == "Returned")
                                        {
                                            <span class="badge badge-success">@issuance.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">@issuance.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (issuance.Status == "Issued")
                                        {
                                            <form asp-action="ReturnIssuance" asp-route-id="@issuance.Id" method="post" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="fas fa-check"></i> Mark Returned
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <ul class="pagination">
                        @if (Model.PageNumber > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Issuances" asp-route-pageNumber="@(Model.PageNumber - 1)"
                                   asp-route-searchTerm="@Model.SearchTerm" asp-route-status="@Model.Status"
                                   asp-route-fromDate="@Model.FromDate" asp-route-toDate="@Model.ToDate">Previous</a>
                            </li>
                        }
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" asp-action="Issuances" asp-route-pageNumber="@i"
                                   asp-route-searchTerm="@Model.SearchTerm" asp-route-status="@Model.Status"
                                   asp-route-fromDate="@Model.FromDate" asp-route-toDate="@Model.ToDate">@i</a>
                            </li>
                        }
                        @if (Model.PageNumber < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Issuances" asp-route-pageNumber="@(Model.PageNumber + 1)"
                                   asp-route-searchTerm="@Model.SearchTerm" asp-route-status="@Model.Status"
                                   asp-route-fromDate="@Model.FromDate" asp-route-toDate="@Model.ToDate">Next</a>
                            </li>
                        }
                    </ul>
                }
                <p class="text-muted text-center">Showing @Model.Issuances.Count of @Model.TotalItems issuances</p>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i> No issuances found.
                </div>
            }
        </div>
    </div>
</div>
