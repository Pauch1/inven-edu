@model inven_edu.Models.ViewModels.InventoryItemViewModel
@{
    ViewData["Title"] = "Edit Inventory Item";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-edit"></i> Edit Inventory Item</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditItem" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="invalid-feedback"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="invalid-feedback"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CategoryId" class="form-label"></label>
                                    <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Quantity" class="form-label"></label>
                                    <input asp-for="Quantity" class="form-control" type="number" min="0" />
                                    <span asp-validation-for="Quantity" class="invalid-feedback"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="MinimumStock" class="form-label"></label>
                            <input asp-for="MinimumStock" class="form-control" type="number" min="0" />
                            <span asp-validation-for="MinimumStock" class="invalid-feedback"></span>
                        </div>

                        @if (Model.CreatedDate != DateTime.MinValue)
                        {
                            <div class="alert alert-info">
                                <strong>Created:</strong> @Model.CreatedDate.ToString("MMM dd, yyyy hh:mm tt")
                                @if (Model.UpdatedDate.HasValue)
                                {
                                    <br /><strong>Last Updated:</strong> @Model.UpdatedDate.Value.ToString("MMM dd, yyyy hh:mm tt")
                                }
                            </div>
                        }

                        <div class="action-buttons mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a asp-action="Inventory" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
