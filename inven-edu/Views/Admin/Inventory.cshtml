@model inven_edu.Models.ViewModels.InventorySearchViewModel
@{
    ViewData["Title"] = "Manage Inventory";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-boxes"></i> Inventory Management</h1>
        <div class="action-buttons">
            <a asp-action="CreateItem" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Item
            </a>
            <a asp-action="DownloadInventoryReport" class="btn btn-info">
                <i class="fas fa-file-pdf"></i> Export PDF
            </a>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Inventory" method="get">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="SearchTerm" class="form-label"></label>
                            <input asp-for="SearchTerm" class="form-control" placeholder="Search by name..." />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="CategoryId" class="form-label"></label>
                            <select asp-for="CategoryId" class="form-control">
                                <option value="">All Categories</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="form-label">&nbsp;</label>
                            <div class="form-check">
                                <input asp-for="LowStockOnly" class="form-check-input" />
                                <label asp-for="LowStockOnly" class="form-label"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="form-label">&nbsp;</label>
                            <div class="form-check">
                                <input asp-for="OutOfStockOnly" class="form-check-input" />
                                <label asp-for="OutOfStockOnly" class="form-label"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label">&nbsp;</label>
                            <div class="action-buttons">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Search
                                </button>
                                <a asp-action="Inventory" class="btn btn-secondary">
                                    <i class="fas fa-redo"></i> Clear
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Inventory Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Item Name</th>
                                <th>Category</th>
                                <th>Quantity</th>
                                <th>Min. Stock</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr class="@(item.IsOutOfStock ? "table-danger" : item.IsLowStock ? "table-warning" : "")">
                                    <td>
                                        <strong>@item.Name</strong>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <br /><small class="text-muted">@item.Description</small>
                                        }
                                    </td>
                                    <td>@item.CategoryName</td>
                                    <td><strong>@item.Quantity</strong></td>
                                    <td>@item.MinimumStock</td>
                                    <td>
                                        @if (item.IsOutOfStock)
                                        {
                                            <span class="badge badge-danger">Out of Stock</span>
                                        }
                                        else if (item.IsLowStock)
                                        {
                                            <span class="badge badge-warning">Low Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success">In Stock</span>
                                        }
                                    </td>
                                    <td>@item.CreatedDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="action-buttons">
                                            <a asp-action="EditItem" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <form asp-action="DeleteItem" asp-route-id="@item.Id" method="post" style="display: inline;" 
                                                  onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <ul class="pagination">
                        @if (Model.PageNumber > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Inventory" 
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-categoryId="@Model.CategoryId"
                                   asp-route-lowStockOnly="@Model.LowStockOnly"
                                   asp-route-outOfStockOnly="@Model.OutOfStockOnly"
                                   asp-route-pageNumber="@(Model.PageNumber - 1)">
                                    Previous
                                </a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" asp-action="Inventory" 
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-categoryId="@Model.CategoryId"
                                   asp-route-lowStockOnly="@Model.LowStockOnly"
                                   asp-route-outOfStockOnly="@Model.OutOfStockOnly"
                                   asp-route-pageNumber="@i">
                                    @i
                                </a>
                            </li>
                        }

                        @if (Model.PageNumber < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Inventory" 
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-categoryId="@Model.CategoryId"
                                   asp-route-lowStockOnly="@Model.LowStockOnly"
                                   asp-route-outOfStockOnly="@Model.OutOfStockOnly"
                                   asp-route-pageNumber="@(Model.PageNumber + 1)">
                                    Next
                                </a>
                            </li>
                        }
                    </ul>
                }

                <p class="text-muted text-center">
                    Showing @Model.Items.Count of @Model.TotalItems items
                </p>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i> No inventory items found. 
                    <a asp-action="CreateItem">Add your first item</a>
                </div>
            }
        </div>
    </div>
</div>
