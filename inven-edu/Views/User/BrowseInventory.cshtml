@model inven_edu.Models.ViewModels.InventorySearchViewModel
@{
    ViewData["Title"] = "Browse Inventory";
}

<div class="container-fluid">
    <h1 class="mb-4"><i class="fas fa-search"></i> Browse Available Inventory</h1>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="BrowseInventory" method="get">
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="SearchTerm" class="form-label"></label>
                            <input asp-for="SearchTerm" class="form-control" placeholder="Search by item name..." />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="CategoryId" class="form-label"></label>
                            <select asp-for="CategoryId" class="form-control">
                                <option value="">All Categories</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-label">&nbsp;</label>
                            <div class="action-buttons">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Search
                                </button>
                                <a asp-action="BrowseInventory" class="btn btn-secondary">
                                    <i class="fas fa-redo"></i> Clear
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Inventory Grid -->
    @if (Model.Items.Any())
    {
        <div class="row">
            @foreach (var item in Model.Items)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="text-muted">@item.CategoryName</p>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <p class="card-text">@item.Description</p>
                            }
                            <div class="mt-3">
                                <strong>Available Quantity:</strong>
                                @if (item.IsOutOfStock)
                                {
                                    <span class="badge badge-danger">Out of Stock</span>
                                }
                                else if (item.IsLowStock)
                                {
                                    <span class="badge badge-warning">@item.Quantity (Low Stock)</span>
                                }
                                else
                                {
                                    <span class="badge badge-success">@item.Quantity</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer">
                            <a asp-action="ItemDetails" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                <i class="fas fa-info-circle"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <ul class="pagination">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-action="BrowseInventory" asp-route-pageNumber="@i"
                           asp-route-searchTerm="@Model.SearchTerm" asp-route-categoryId="@Model.CategoryId">@i</a>
                    </li>
                }
            </ul>
        }
        <p class="text-muted text-center">Showing @Model.Items.Count of @Model.TotalItems items</p>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> No items found.
        </div>
    }
</div>
