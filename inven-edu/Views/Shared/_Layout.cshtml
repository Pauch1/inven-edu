<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InvenEdu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @{
        var hideAuthLinks = ViewData["HideAuthLinks"] as bool? ?? false;
    }
    
    <header>
        <nav class="navbar">
            <div class="navbar-container">
                <div class="navbar-header">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-box"></i>
                        <span class="brand-text">InvenEdu</span>
                    </a>
                    <button class="navbar-toggler" id="navbarToggler" type="button" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon">
                            <i class="fas fa-bars"></i>
                        </span>
                    </button>
                </div>

                <div class="navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")" 
                                       asp-controller="Admin" 
                                       asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt"></i>
                                        <span>Dashboard</span>
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-cogs"></i>
                                        <span>Management</span>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li><a class="dropdown-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Inventory" ? "active" : "")" asp-controller="Admin" asp-action="Inventory">
                                            <i class="fas fa-boxes"></i> Inventory
                                        </a></li>
                                        <li><a class="dropdown-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Issuances" ? "active" : "")" asp-controller="Admin" asp-action="Issuances">
                                            <i class="fas fa-hand-holding"></i> Issuances
                                        </a></li>
                                        <li><a class="dropdown-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Categories" ? "active" : "")" asp-controller="Admin" asp-action="Categories">
                                            <i class="fas fa-tags"></i> Categories
                                        </a></li>
                                        <li><a class="dropdown-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "active" : "")" asp-controller="Admin" asp-action="Users">
                                            <i class="fas fa-users"></i> Users
                                        </a></li>
                                    </ul>
                                </li>
                            }
                            else if (User.IsInRole("User"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user"></i>
                                        <span>My Account</span>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                        <li><a class="dropdown-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["Controller"]?.ToString() == "User" ? "active" : "")" asp-controller="User" asp-action="Dashboard">
                                            <i class="fas fa-tachometer-alt"></i> Dashboard
                                        </a></li>
                                        <li><a class="dropdown-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "MyIssuances" ? "active" : "")" asp-controller="User" asp-action="MyIssuances">
                                            <i class="fas fa-list"></i> My Items
                                        </a></li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "BrowseInventory" ? "active" : "")" 
                                       asp-controller="User" 
                                       asp-action="BrowseInventory">
                                        <i class="fas fa-search"></i>
                                        <span>Browse</span>
                                    </a>
                                </li>
                            }
                        }
                        else if (!hideAuthLinks)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Login" ? "active" : "")" 
                                   asp-controller="Account" 
                                   asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i>
                                    <span>Login</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Register" ? "active" : "")" 
                                   asp-controller="Account" 
                                   asp-action="Register">
                                    <i class="fas fa-user-plus"></i>
                                    <span>Register</span>
                                </a>
                            </li>
                        }
                    </ul>

                    @if (User.Identity?.IsAuthenticated == true || !hideAuthLinks)
                    {
                        <div class="navbar-actions">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <div class="navbar-user">
                                    <span class="user-info">
                                        <i class="fas fa-user-circle"></i>
                                        <span class="user-name">@User.Identity.Name</span>
                                    </span>
                                </div>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                                    <button type="submit" class="btn btn-outline btn-sm" title="Logout">
                                        <i class="fas fa-sign-out-alt"></i>
                                        <span class="btn-text">Logout</span>
                                    </button>
                                </form>
                            }
                            <button class="theme-toggle" id="themeToggle" type="button" title="Toggle dark mode" aria-label="Toggle dark mode">
                                <i class="fas fa-moon"></i>
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="navbar-actions">
                            <button class="theme-toggle" id="themeToggle" type="button" title="Toggle dark mode" aria-label="Toggle dark mode">
                                <i class="fas fa-moon"></i>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content">
        @if (!hideAuthLinks)
        {
            <div class="container">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle"></i>
                        <span>@TempData["Success"]</span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>@TempData["Error"]</span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["Warning"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>@TempData["Warning"]</span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["Info"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="fas fa-info-circle"></i>
                        <span>@TempData["Info"]</span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>
        }
        
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <p class="footer-text">
                    &copy; @DateTime.Now.Year InvenEdu - University Inventory Management System
                </p>
                <nav class="footer-nav">
                    <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                    <span class="separator">|</span>
                    <a asp-controller="Home" asp-action="Index">Home</a>
                </nav>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
