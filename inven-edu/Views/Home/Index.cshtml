@{
    ViewData["Title"] = "Welcome to InvenEdu";
    ViewData["HideAuthLinks"] = true; // Flag to hide auth links in header
}

<div class="landing-page">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">
                    <i class="fas fa-box"></i>
                    Welcome to InvenEdu
                </h1>
                <p class="hero-subtitle">
                    University Inventory Management System
                </p>
                <p class="hero-description">
                    Streamline your university's inventory management with our comprehensive, 
                    easy-to-use platform. Track equipment, manage issuances, and maintain 
                    accurate records all in one place.
                </p>
                
                <div class="hero-actions">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt"></i>
                        <span>Sign In</span>
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline btn-lg">
                        <i class="fas fa-user-plus"></i>
                        <span>Create Account</span>
                    </a>
                </div>
            </div>
            
            <div class="hero-image">
                <div class="hero-illustration">
                    <i class="fas fa-boxes"></i>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="container">
            <h2 class="section-title">
                <i class="fas fa-star"></i>
                Key Features
            </h2>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-warehouse"></i>
                        </div>
                        <h3 class="feature-title">Inventory Management</h3>
                        <p class="feature-description">
                            Efficiently track and manage all your university equipment and materials with our intuitive inventory system.
                        </p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-exchange-alt"></i>
                        </div>
                        <h3 class="feature-title">Issuance Tracking</h3>
                        <p class="feature-description">
                            Monitor item checkouts and returns with complete audit trails and automated notifications.
                        </p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h3 class="feature-title">Real-time Analytics</h3>
                        <p class="feature-description">
                            Get instant insights with comprehensive dashboards and detailed reports for better decision-making.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-bell"></i>
                        </div>
                        <h3 class="feature-title">Low Stock Alerts</h3>
                        <p class="feature-description">
                            Never run out of essential items with automatic low stock notifications and alerts.
                        </p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-users-cog"></i>
                        </div>
                        <h3 class="feature-title">User Management</h3>
                        <p class="feature-description">
                            Secure role-based access control with separate Admin and User portals for streamlined operations.
                        </p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-file-pdf"></i>
                        </div>
                        <h3 class="feature-title">Export Reports</h3>
                        <p class="feature-description">
                            Generate professional PDF reports for inventory status, issuances, and comprehensive analytics.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2 class="cta-title">Ready to Get Started?</h2>
                <p class="cta-description">
                    Join InvenEdu today and transform the way you manage your university inventory.
                </p>
                <div class="cta-actions">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                        <i class="fas fa-rocket"></i>
                        <span>Get Started Now</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>

@section Styles {
    <style>
        /* Landing Page Specific Styles */
        .landing-page {
            margin: 0;
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            padding: var(--spacing-xxl) 0;
            margin-bottom: var(--spacing-xxl);
        }

        .hero-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 var(--spacing-lg);
            gap: var(--spacing-xxl);
        }

        .hero-text {
            flex: 1;
            max-width: 600px;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: var(--spacing-lg);
            line-height: 1.2;
            display: flex;
            align-items: center;
            gap: var(--spacing-md);
        }

        .hero-title i {
            font-size: 3rem;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            font-weight: 500;
            margin-bottom: var(--spacing-md);
            opacity: 0.9;
        }

        .hero-description {
            font-size: 1.125rem;
            line-height: 1.7;
            margin-bottom: var(--spacing-xl);
            opacity: 0.95;
        }

        .hero-actions {
            display: flex;
            gap: var(--spacing-md);
            flex-wrap: wrap;
        }

        .hero-actions .btn {
            padding: var(--spacing-md) var(--spacing-xl);
            font-size: 1.125rem;
        }

        .hero-actions .btn-primary {
            background-color: white;
            color: var(--primary-color);
            border-color: white;
        }

        .hero-actions .btn-primary:hover {
            background-color: var(--bg-secondary);
            color: var(--primary-hover);
            transform: translateY(-2px);
        }

        .hero-actions .btn-outline {
            background-color: transparent;
            color: white;
            border-color: white;
        }

        .hero-actions .btn-outline:hover {
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
            border-color: white;
        }

        .hero-image {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .hero-illustration {
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(10px);
        }

        .hero-illustration i {
            font-size: 150px;
            opacity: 0.8;
        }

        /* Features Section */
        .features-section {
            padding: var(--spacing-xxl) 0;
            background-color: var(--bg-secondary);
        }

        .section-title {
            text-align: center;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: var(--spacing-xxl);
            color: var(--text-primary);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: var(--spacing-md);
        }

        .section-title i {
            color: var(--primary-color);
        }

        .feature-card {
            background-color: var(--bg-primary);
            padding: var(--spacing-xl);
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-md);
            text-align: center;
            height: 100%;
            transition: all var(--transition-normal);
        }

        .feature-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-lg);
        }

        .feature-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto var(--spacing-lg);
        }

        .feature-icon i {
            font-size: 2.5rem;
            color: white;
        }

        .feature-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: var(--spacing-md);
            color: var(--text-primary);
        }

        .feature-description {
            color: var(--text-secondary);
            line-height: 1.7;
            margin: 0;
        }

        /* CTA Section */
        .cta-section {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            padding: var(--spacing-xxl) 0;
            text-align: center;
        }

        .cta-content {
            max-width: 800px;
            margin: 0 auto;
            padding: 0 var(--spacing-lg);
        }

        .cta-title {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: var(--spacing-md);
        }

        .cta-description {
            font-size: 1.25rem;
            margin-bottom: var(--spacing-xl);
            opacity: 0.95;
        }

        .cta-actions .btn {
            padding: var(--spacing-md) var(--spacing-xxl);
            font-size: 1.25rem;
            background-color: white;
            color: var(--primary-color);
            border-color: white;
        }

        .cta-actions .btn:hover {
            background-color: var(--bg-secondary);
            color: var(--primary-hover);
            transform: translateY(-2px) scale(1.05);
        }

        /* Responsive Design */
        @@media (max-width: 991px) {
            .hero-content {
                flex-direction: column;
                text-align: center;
            }

            .hero-title {
                font-size: 2.5rem;
                justify-content: center;
            }

            .hero-actions {
                justify-content: center;
            }

            .hero-image {
                margin-top: var(--spacing-xl);
            }
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2rem;
                flex-direction: column;
                gap: var(--spacing-sm);
            }

            .hero-subtitle {
                font-size: 1.25rem;
            }

            .hero-description {
                font-size: 1rem;
            }

            .hero-illustration {
                width: 200px;
                height: 200px;
            }

            .hero-illustration i {
                font-size: 100px;
            }

            .section-title {
                font-size: 2rem;
            }

            .cta-title {
                font-size: 2rem;
            }

            .cta-description {
                font-size: 1rem;
            }

            .hero-actions .btn,
            .cta-actions .btn {
                width: 100%;
            }
        }

        @@media (max-width: 480px) {
            .hero-title {
                font-size: 1.75rem;
            }

            .feature-card {
                padding: var(--spacing-lg);
            }

            .feature-icon {
                width: 60px;
                height: 60px;
            }

            .feature-icon i {
                font-size: 2rem;
            }
        }
    </style>
}
